import React, {useEffect} from 'react';
import useData from '../shared/hooks/useData';

export default function OCRRecordDisplay(props){
    const arkCode = props.identifier.split("/").pop(); 
    const query = "https://gallica.bnf.fr/services/ContentSearch?"
        + "ark=" + arkCode +
        + "&query=" + props.term
    const ocrXML = useData(query);

    return(
        <div>
            ocrXML ? ocrXML : "Loading..."
        </div>
    )

}